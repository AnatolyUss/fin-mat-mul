{
    "compilerOptions": {
        "removeComments": true,
        "module": "commonjs",
        "allowJs": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "types": [
            "node",
            "mathjs",
            "busboy",
            "express",
            "connect-timeout",
            "body-parser"
        ]
    },

    "exclude": [
        "node_modules"
    ],

    "include": [
        "src/**/*"
    ]
}
